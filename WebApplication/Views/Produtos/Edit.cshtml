@model WebApplication.Models.ViewModels.ProdutoFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Produto.Id" />
            <div class="form-group">
                <label asp-for="Produto.Name" class="control-label"></label>
                <input asp-for="Produto.Name" class="form-control" />
                <span asp-validation-for="Produto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Desc" class="control-label"></label>
                <input asp-for="Produto.Desc" class="form-control" />
                <span asp-validation-for="Produto.Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Local" class="control-label"></label>
                <input asp-for="Produto.Local" class="form-control" />
                <span asp-validation-for="Produto.Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Valor" class="control-label"></label>
                <input asp-for="Produto.Valor" class="form-control" />
                <span asp-validation-for="Produto.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.CategoriaId" class="control-label"></label>
                <select asp-for="Produto.CategoriaId" asp-items="@(new SelectList(Model.Categorias,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}